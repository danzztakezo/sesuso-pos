<div data-role="page" id="order-show">

  <div data-role="header" data-position="fixed">
    <h1><%= @order.restaurant_table.caption %></h1>
    <%= link_to "Bezahlen", :selectTable %>
    <%= link_to "&nbsp;".html_safe, {:controller => "frontend", :action => "selectCategory", :tableNumber => @order.restaurant_table.number}, { "data-icon" => "plus" } %>
  </div>

  <div data-role="content">

    <ul data-role="listview">
      <% @order.order_items.each do |order_item| %>
          <li>
            <%= link_to order_item do %>
                <h2><%= order_item.product.caption %></h2>
                <%= order_item.product.price + " Euro" %>
            <% end %>
          </li>
      <% end %>
    </ul>

  </div>
</div>

