<div data-role="page" id="select-product">

  <div data-role="header" data-position="fixed">
    <div class="header-box"><h3>Alle <%= @selectedCategory.caption %>:</h3></div>
  </div>


  <div data-role="content">

    <ul data-role="listview">
      <% @products.each do |product| %>
          <li>
            <%= link_to product do %>
                <h2><%= "Nr. #{product.number} - #{product.caption}" %></h2>
            <% end %>
          </li>
      <% end %>
    </ul>


  </div>
</div>